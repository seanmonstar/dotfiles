[alias]
	b = branch
	c = commit
	ca = commit --amend --no-edit
	co = checkout
	d = diff
	f = fetch
	l = log --oneline -20 --no-merges
	pf = push -f
	pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
	r = reset --hard
	rh = reset --hard
	s = status
